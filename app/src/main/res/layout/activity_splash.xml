<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f5fa"
    android:orientation="vertical" >

    <ImageView android:id="@+id/iv_splash_ad"
        android:layout_width="fill_parent"
        android:layout_height="445dp"
        android:scaleType="centerCrop"
        />

    <!-- 做一个白色的背景 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fff"
        android:layout_below="@id/iv_splash_ad"
        />
    <View android:id="@+id/spacing_splash" android:layout_width="1dp" android:layout_height="10dp" android:layout_alignParentBottom="true"/>

    <TextView android:id="@+id/tv_splash_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/spacing_splash"
        android:layout_marginBottom="10dp"
        android:textSize="11dp"
        android:textColor="#999"
        android:text="copyright"
        />

    <ImageView
        android:layout_width="87dp"
        android:layout_height="31dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_splash_copyright"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_launcher"
        />




</RelativeLayout>